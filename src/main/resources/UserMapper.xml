<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Maper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="exam.shop.mapper.UserMapper">
	<insert id="registerUser" parameterType="User">
		insert into users values(#{userId},#{userPwd},#{userName})
	</insert>
	
	<select id="getUserByUserId" parameterType="User" resultType="User">
		select user_id,user_pwd form users
		where user_id=#{userId} and user_pwd=#{userPwd};
	</select>
	
	<select id="getPassword" parameterType="java.lang.String" resultType="java.lang.String">
		select user_pwd from users where user_id=#{user_id}
	</select>
</mapper>